<div class="container-fluid jobs">
	<div class="container">
		<div class="row pt-4">
		<% @vacancies.each do |v| %>	
			<div class="col-md-4">
				<div class="card p-3 mb-3 ">
					<div class="d-flex justify-content-between">
						<div class="d-flex flex-row align-items-center">
							<div class="ms-2 c-details">
									<h6 class="mb-0">Código da vaga: <%= v.code %></h6> <span><%= l v.created_at, format: :long %></span>
							</div>
						</div>
						<div class="badge"> <span><%= number_to_currency v.salary_range %></span> </div>
				</div>
				<div class="mt-5">
						<h3 class="heading"><%= v.title %><br><%= v.work_model %></h3>
						<div class="mt-5">
							<button class="btn btn-success">Aplicar</button>
						</div>
					</div>
				</div>
			</div>
			<% end %>
		</div>
	</div>
</div>

