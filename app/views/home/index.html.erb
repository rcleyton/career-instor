<%= render "shared/nav" %>

<div class="container-fluid bg-hero align-middle">
  <div class="container col-xxl-8 px-4 py-5">
		<div class="text-center">
			<h1 class="display-5 fw-bold text-white">Carreiras Instor</h1>
			<div class="col-lg-6 mx-auto">
				<p class="lead mb-4 text-white">
					A Instor te convida a fazer parte de uma das equipes mais revolucionárias do mercado. 
					Somar, compartilhar e contribuir para que os nossos resultados sejam ainda maiores, 
					é o que buscamos. Venha fazer parte.
				</p>
				<div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
					<a href="#vacancy" class="btn btn-primary btn-lg px-4 gap-3 btn-hero">Ver Vagas</a>
				</div>
			</div>
		</div>
  </div>
</div>

<div class="container ">
	<%= form_with url: search_path, local: true, method: :get do %>
		<div class="row height d-flex justify-content-center align-items-center">
			<div class="col-md-8">
				<div class="search">
				<i class="fa fa-search"></i>
					<%= text_field_tag :q, nil, placeholder: "Pesquisar...", class: "form-control" %>
					<%= submit_tag "Buscar", class: "btn btn-primary bt-submit" %>
				</div>
			</div>
		</div>
	<% end %>
</div>

<div class="container p-3" id="vacancy">
	<% @vacancies.each do |v| %>	
	<div class="col-12 col-md-8 mx-auto">
	
		<div class="card mb-3">
			<div class="card-body">
				<div class="d-flex justify-content-between align-items-center">
					<h6 class="card-title job-code"><%= v.code %></h5>
					<span class="badge job-bg"><%= v.work_model %></span>
				</div>
				<h6 class="card-subtitle mb-2 text-muted job-date">
					<%= l v.created_at, format: :long %>
				</h6>
				<h4 class="card-title pt-2"><%= v.title %></h5>
				<p class="card-text">
					<%= v.vacancy_location %>
				</p>
				<%= link_to "Aplicar", home_path(v), class: "btn btn-success" %>
			</div>
		</div>
	
	</div>
	<% end %>
</div>


<div class="container mx-auto">
	<%= will_paginate @vacancies %>
</div>


<%= render "shared/footer" %>