<div class="row">
  <div class="col-md-6 col-md-offset-3 col-sm-12 col-xs-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Editar vaga</h3>
      </div>
      <div class="panel-body">
        <%= simple_form_for @vacancy, url: dashboard_vacancy_path do |f| %>
            <%= f.input :title %>
            <%= f.input :field %>
            <%= f.input :vacancy_level %>
            <%= f.input :description %>
            <%= f.input :requirements %>
            <%= f.input :desired_skills %>
            <%= f.input :salary_range %>
            <%= f.input :benefits %>
            <%= f.input :vacancy_location %>
            <%= f.input :work_model, as: :radio_buttons, collection: Vacancy::WORK_MODEL, class: "my_class" %>
            <%= f.input :working_day %>

            <div class="ln_solid"></div>
            <div class="form-group">
              <div class="col">
                <%= f.button :submit, class:"btn btn-success" %>
                <%= link_to "Cancelar", dashboard_home_index_path, class:"btn btn-warning" %>
              </div>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>